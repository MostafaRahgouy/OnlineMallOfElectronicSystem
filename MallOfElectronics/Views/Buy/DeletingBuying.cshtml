@model MallOfElectronics.Models.DataBase.Buy

@{
    ViewBag.Title = "Delete Buying";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h1 class="blue-color-text">Delete Buying</h1>

<h2>Are you sure you want to delete this?</h2>
<h2 style="color:green;">@ViewBag.message</h2>
<h2 style="color:red;">@ViewBag.ErrorMessage</h2>

<table width="950" class="list-of-products-tabel">
    <tr class="list-of-products-tabel-first-row">
        <th>
            @Html.DisplayNameFor(model => model.TrackingCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardNumber)
        </th>
    </tr>
    <tr class="list-of-products-tabel-instance">
        <td>
            @Html.DisplayFor(model => model.TrackingCode)
        </td>
        <td>
            @Html.DisplayFor(model => model.Day)
        </td>
        <td>
            @Html.DisplayFor(model => model.Month)
        </td>
        <td>
            @Html.DisplayFor(model => model.Year)
        </td>
        <td>
            @Html.DisplayFor(model => model.CustomerID)
        </td>
        <td>
            @Html.DisplayFor(model => model.CardNumber)
        </td>
    </tr>
</table>
@using (Html.BeginForm("DeletingBuying", "Buy", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    <p>
        <input type="submit" value="Delete" style="color: white; background-color: #186fb1; font-size: 20px; width: 150px; height: 50px;" />
        <b>@Html.ActionLink("Back to List", "ListOfBuying", "Buy", new { style = "font-size:20px;" })</b>
    </p>
}