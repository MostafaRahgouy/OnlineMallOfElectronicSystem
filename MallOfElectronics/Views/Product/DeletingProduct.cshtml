            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductIDCategories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScreenSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemorySize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecisionCamera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdOfCategoryFeatures)
        </th>
    </tr>
    <tr class="list-of-products-tabel-instance">
        <td>
           <img src="~/@Model.Image" width="70" height="80"/>
