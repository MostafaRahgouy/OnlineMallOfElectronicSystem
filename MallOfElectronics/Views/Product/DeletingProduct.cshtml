        </td>
        <td>
            @Html.DisplayFor(model => model.ScreenSize)
        </td>
        <td>
            @Html.DisplayFor(model => model.MemorySize)
        </td>
        <td>
            @Html.DisplayFor(model => model.Brand)
        </td>
        <td>
            @Html.DisplayFor(model => model.PrecisionCamera)
        </td>
        <td>
            @Html.DisplayFor(model => model.IdOfCategoryFeatures)
        </td>
    </tr>
</table>
@using (Html.BeginForm("DeletingProduct", "Product", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    <p>
        <input type="submit" value="Delete" style="color: white; background-color: #186fb1; font-size: 20px; width: 150px; height: 50px;" />
        <b>@Html.ActionLink("Back to List", "ListOfProducts", "Product", new { style = "font-size:20px;" })</b>
    </p>
}


