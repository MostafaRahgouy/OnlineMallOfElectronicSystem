@if (Model != null)
{
    <div class="products-title-products-page">
        <b style="color:black; font-size:large;">Mobile Products</b>
    </div>
    <table>
        @for (var item = 0; item < Model.Count(); )
        {
        <tr>
            @for (int i = 1; (i <= 4) && (item < Model.Count());  item++)
                {
                    if (Model[item].ProductType == 1)
                    {
                <td id="sliderFrame" style="border: 1px solid #b3a2a2;">
                    <b>
                        @{
                        string productsFullName = @company.Find(Model[item].CompanyId).Name + " "
                                               + @Model[item].Name + " "
                                               + @Model[item].Price + " $";
                        }
                        <img src="~/@Model[item].Image" width="200" height="150" />

                        @Html.ActionLink(productsFullName, "DisplayProductDetails", "Product",
                                  new { productId = Model[item].Id },
                                     new { style = "text-decoration:none; background-color:transparent;" })
