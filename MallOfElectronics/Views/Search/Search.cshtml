@model List<MallOfElectronics.Models.DataBase.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MallOfElectronics.Models.Repository.CompanyRepository company = new MallOfElectronics.Models.Repository.CompanyRepository();
}
@********************************************slider***********************************************@
<link href="~/Content/themes/SliderTheme/js-image-slider.css" rel="stylesheet" type="text/css" />
<script src="~/Content/themes/SliderTheme/js-image-slider.js" type="text/javascript"></script>
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<meta charset="utf-8">
<div class="products-title-products-page">
    <b style="color: black; font-size: large; font: bold;">We Offer You To Watch This Products</b>
</div>
<br />
<br />
<div id="sliderFrame">
    <div id="slider">
        <img src="~/Images/SliderImages/slider-1.jpg" />
        <img src="~/Images/SliderImages/slider-2.jpg" />
        <img src="~/Images/SliderImages/slider-3.jpg" />
        <img src="~/Images/SliderImages/slider-4.jpg" />
        <img src="~/Images/SliderImages/slider-5.jpg" />
    </div>
    <div style="clear:both;height:0;"></div>
</div>
@********************************************search result***************************************@
<div class="products-title-products-page">
    <b style="color:black; font-size:large;">Search Result</b>
</div>
