@model MallOfElectronics.Models.DataBase.Person
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>Create a new account</h2>
</hgroup>

@using (Html.BeginForm("Register", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myRegisterForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Image)
                @Html.Upload("UploadImage" )
            </li>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.Sex)
                @Html.EditorFor(m => m.Sex)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
        </ol>
        <input type="submit" value="Register" style="color: white; background-color: #186fb1; font-size: 20px; width: 150px; height: 50px;" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/AjaxForm/jquery.form.min.js">
    $("#myRegisterForm").ajaxForm();
    </script>
}
