@model MallOfElectronics.Models.DataBase.Person

@{
    ViewBag.Title = "Deleteing User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h1 class="blue-color-text">Deleteing User</h1>

<h2>Are you sure you want to delete this?</h2>
<h2 style="color:green;">@ViewBag.message</h2>
<h2 style="color:red;">@ViewBag.ErrorMessage</h2>

<table class="list-of-products-tabel">
    <tr class="list-of-products-tabel-first-row">
        <th width="100">
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th width="150">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th width="150">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th width="100">
            @Html.DisplayNameFor(model => model.RegisteryDate)
        </th>
        <th width="250">
            @Html.DisplayNameFor(model => model.IdOfTheCategoryOfPersons)
        </th>
        <th width="150">
            @Html.DisplayNameFor(model => model.Sex)

        </th>

    </tr>
    <tr class="list-of-products-tabel-instance">
        <td>
            @{
                if (Model.Image != null)
                {
                    <img src="~/@Model.Image" width="70" height="60" />
                }
            }
        </td>
        <td>
            @Html.DisplayFor(model => model.Name)
        </td>
        <td>
            @Html.DisplayFor(model => model.Email)
        </td>
        <td>
            @Html.DisplayFor(model => model.RegisteryDate)
        </td>
        <td>
            @{
                if( Model.IdOfTheCategoryOfPersons != 0 )
                {
                    <p> @Model.IdOfTheCategoryOfPersons </p> 
                }
            }
           @*@Html.DisplayFor(model => model.IdOfTheCategoryOfPersons)*@
        </td>
        <td>
            @*@Html.DisplayFor(model => model.Sex)*@
            @{

                if (Model.Sex == true && Model.Sex != null)
                {
                    <p> Male </p>
                }
                if (Model.Sex == false && Model.Sex != null)
                {
                    <p> Female</p>
                }
            }
        </td>
    </tr>
</table>
@using (Html.BeginForm("DeletingUser", "Person", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    <p>
        <input type="submit" value="Delete" style="color: white; background-color: #186fb1; font-size: 20px; width: 150px; height: 50px;" />
        <b>@Html.ActionLink("Back to List", "ListOfUsers", "Person", new { style = "font-size:20px;" })</b>
    </p>
}


