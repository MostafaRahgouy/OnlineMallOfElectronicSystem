@model IEnumerable<MallOfElectronics.Models.DataBase.Buy>

@{
    ViewBag.Title = "List Of Buying";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />

<h2 class="blue-color-text">List Of Buying</h2>

<table width="955" class="list-of-products-tabel">
    <tr class="list-of-products-tabel-first-row">
        <th>
            @Html.DisplayNameFor(model => model.TrackingCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="list-of-products-tabel-instance">
        <td>
            @Html.DisplayFor(modelItem => item.TrackingCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Month)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardNumber)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeletingBuying", "Buy", new { trackingCode = item.TrackingCode }, null)
        </td>
    </tr>
}

</table>
