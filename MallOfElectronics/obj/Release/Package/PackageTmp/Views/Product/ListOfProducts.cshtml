@model IEnumerable<MallOfElectronics.Models.DataBase.Product>
@{
    ViewBag.Title = "List Of Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="blue-color-text">List Of Products</h2>
<link href="~/Content/Site.css" rel="stylesheet" />

<p>
    <b>@Html.ActionLink("Adding New Product", "AddingProduct", "Product")</b>
</p>
<table width="950" class="list-of-products-tabel">
    <tr class="list-of-products-tabel-first-row">
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductIDCategories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScreenSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemorySize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecisionCamera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdOfCategoryFeatures)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="list-of-products-tabel-instance">
        <td>
            <img src="~/@item.Image" width="70" height="80"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductIDCategories)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScreenSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemorySize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecisionCamera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdOfCategoryFeatures)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "EditingProduct","Product",  new { id = item.Id }, null) 
            @*@Html.ActionLink("Details", "Details","Product" ,  new { id=item.Id }, null)*@ 
            @Html.ActionLink("Delete", "DeletingProduct", "Product", new { id = item.Id }, null)
        </td>
    </tr>
}
</table>
