@model MallOfElectronics.Models.DataBase.PhoneSupport

@{
    ViewBag.Title = "Deleting Phone Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h1 class="blue-color-text">Deleting Phone Support</h1>

<h2>Are you sure you want to delete this?</h2>
<h2 style="color:green;">@ViewBag.message</h2>
<h2 style="color:red;">@ViewBag.ErrorMessage</h2>

<table width="950" class="list-of-products-tabel">
    <tr class="list-of-products-tabel-first-row">
        <th>
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneSupport1)
        </th>
    </tr>
    <tr class="list-of-products-tabel-instance">
        <td>
            @Html.DisplayFor(model => model.CompanyId)
        </td>

        <td>
            @Html.DisplayFor(model => model.PhoneSupport1)
        </td>
    </tr>
</table>
@using (Html.BeginForm("DeletingPhoneSupport", "PhoneSupport", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    <p>
        <input type="submit" value="Delete" style="color: white; background-color: #186fb1; font-size: 20px; width: 150px; height: 50px;" />
        <b>@Html.ActionLink("Back to List", "ListOfPhoneSupport", "PhoneSupport", new { style = "font-size:20px;" })</b>
    </p>
}